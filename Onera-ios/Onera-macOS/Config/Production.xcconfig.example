// Production.xcconfig (macOS)
// Configuration settings for the macOS Production target

// =====================================================
// Environment Variables
// These get substituted into Info.plist at build time
// =====================================================

// API Configuration
API_BASE_URL = https:/$()/api.onera.chat
TRPC_PATH = /trpc

// Clerk Configuration
CLERK_PUBLISHABLE_KEY = pk_live_YOUR_PRODUCTION_KEY_HERE

// WebAuthn Configuration
WEBAUTHN_RP_ID = onera.chat
WEBAUTHN_RP_NAME = Onera

// Keychain Configuration
KEYCHAIN_SERVICE_NAME = chat.onera.keychain

// Bundle identifier
PRODUCT_BUNDLE_IDENTIFIER = prod.app.onera.macos

// App Group for sharing data with iOS app
APP_GROUP_IDENTIFIER = group.prod.app.onera
