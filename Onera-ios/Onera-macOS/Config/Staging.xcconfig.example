// Staging.xcconfig (macOS)
// Configuration settings for the macOS Staging target

// =====================================================
// Environment Variables
// These get substituted into Info.plist at build time
// =====================================================

// API Configuration
API_BASE_URL = https:/$()/api-stage.onera.chat
TRPC_PATH = /trpc

// Clerk Configuration
CLERK_PUBLISHABLE_KEY = pk_test_YOUR_STAGING_KEY_HERE

// WebAuthn Configuration
WEBAUTHN_RP_ID = staging.onera.chat
WEBAUTHN_RP_NAME = Onera

// Keychain Configuration
KEYCHAIN_SERVICE_NAME = chat.onera.staging.keychain

// Bundle identifier (different from prod to allow both apps on same machine)
PRODUCT_BUNDLE_IDENTIFIER = staging.app.onera.macos

// App Group for sharing data with iOS app
APP_GROUP_IDENTIFIER = group.staging.app.onera
